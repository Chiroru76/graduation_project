<div id="character_status" class="space-y-4">
  <!-- ヘッダー: 名前 + レベルバッジ -->
  <div class="flex items-center justify-between gap-3">
    <h3 class="text-lg sm:text-xl font-bold text-gray-900 truncate">
      <%= character.character_kind.name %>
    </h3>
    <div class="flex-shrink-0 px-3 py-1 rounded-full bg-gray-100 shadow-md">
      <div class="text-xs font-bold text-black tracking-wider">
        Lv. <%= character.level %>
      </div>
    </div>
  </div>

  <!-- 経験値ゲージ -->
  <div>
    <div class="flex items-center justify-between mb-2">
      <div class="flex items-center gap-2">
        <span class="text-xs font-bold text-gray-700 tracking-wide">経験値</span>
      </div>
      <span class="text-xs font-bold text-gray-600 tabular-nums">
        あと <%= character.exp_needed %> EXP
      </span>
    </div>
    <div class="relative h-3 rounded-full border border-gray-300 shadow-inner overflow-hidden bg-gray-100">
      <div class="absolute inset-0 bg-gradient-to-r from-emerald-400 to-teal-400 rounded-full transition-all duration-700 ease-out"
           style="width: <%= character.exp_progress_percentage %>%">
        <!-- ハイライト効果 -->
        <div class="absolute inset-0 bg-gradient-to-t from-transparent via-white/40 to-transparent"></div>
        <!-- シャドウ効果 -->
        <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black/20"></div>
      </div>
    </div>
  </div>

  <!-- しあわせ度ゲージ -->
  <div>
    <div class="flex items-center justify-between mb-2">
      <div class="flex items-center gap-2">
        <span class="text-xs font-bold text-gray-700 tracking-wide">しあわせ度</span>
      </div>
      <span class="text-xs font-bold text-gray-600 tabular-nums">
        <%= character.bond_hp %>
      </span>
    </div>
    <div class="relative h-3 rounded-full border border-gray-300 shadow-inner overflow-hidden bg-gray-100">
      <div class="absolute inset-0 bg-gradient-to-r from-orange-400 to-pink-400 rounded-full transition-all duration-700 ease-out"
           style="width: <%= character.bond_hp_ratio %>%">
        <!-- ハイライト効果 -->
        <div class="absolute inset-0 bg-gradient-to-t from-transparent via-white/40 to-transparent"></div>
        <!-- シャドウ効果 -->
        <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black/20"></div>
      </div>
    </div>
  </div>
</div>