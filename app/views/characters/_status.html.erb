<div id="character_status" class="w-full">
  <!-- キャラクター名表示 -->
  <div class="text-lg text-black"><%= character.character_kind.name %></div>

  <!-- レベル表示 -->
  <div class="text-lm text-right font-bold text-gray-500">Lv. <%= character.level %></div>

  <!-- 経験値ゲージ -->
  <p class="text-lm text-gray-500">経験値</p>
  <div class="w-full bg-gray-200 rounded-full h-4">
    <div class="bg-green-500 h-4 rounded-full "
         style="width: <%= character.exp_progress_percentage %>%;">
    </div>
  </div>
  <!-- 次のレベルまでの経験値 -->
  <p class="mt-2 text-sm text-gray-600 text-right">
    次のレベルまであと   
    <span class="inline-block w-[6ch] tabular-nums text-right align-baseline">
      <%= character.exp_needed %>
    </span> EXP
  </p>
</div>