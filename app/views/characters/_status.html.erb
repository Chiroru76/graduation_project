<div id="character_status" class="w-full h-43">
  <div class="flex items-center justify-between gap-3 mb-4 md:mb-5">
    <!-- ペット名表示 -->
    <div class="text-sm mb:text-lg text-black font-semibold truncate"><%= character.character_kind.name %></div>
    <!-- レベル表示 -->
    <div class="text-sm font-bold text-gray-500">Lv. <%= character.level %></div>
  </div>

  <!-- 経験値ゲージ -->
  <div class="mb-3 md:mb-4">
    <div class="mb-1">
      <span class="block text-sm text-black">経験値</span>
      <span class="block text-[11px] text-gray-400 text-right">
        あと <%= character.exp_needed %> EXP
      </span>
    </div>
    <div class="w-full bg-gray-200/80 rounded-full h-3 overflow-hidden">
      <div class="bg-green-500 h-3 rounded-full"
           style="width:<%= character.exp_progress_percentage %>%"></div>
    </div>
  </div>

  <!-- キズナゲージ -->
  <div>
    <div class="flex items-center justify-between mb-1">
      <span class="text-sm text-black">しあわせ度</span>
      <span class="text-[11px] text-gray-400">
        現在 <span class="tabular-nums"><%= character.bond_hp %></span>
      </span>
    </div>
    <div class="w-full bg-gray-200/80 rounded-full h-3 overflow-hidden">
      <div class="bg-orange-500 h-3 rounded-full"
           style="width:<%= character.bond_hp_ratio %>%"></div>
    </div>
  </div>
</div>