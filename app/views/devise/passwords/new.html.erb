<div class="max-w-md mx-auto py-24">
  <h2 class="text-xl font-bold mb-10"><%= t(".send_me_reset_password_instructions") %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email %><br />
        <div class="relative">
          <span class="absolute left-4 top-1/2 -translate-y-1/2 text-yellow-600">
            <i class="fa fa-envelope"></i>
          </span>
          <%= f.email_field :email, autocomplete: "email", placeholder: "mochipet@example.com", class: "w-full rounded-xl bg-gray-100 p-4 pl-12 text-lg placeholder-gray-400 focus:outline-none" %>
        </div>
      </div>

    <div class="actions">
      <%= f.submit t(".submit"), class: "w-full rounded-full bg-yellow-300 hover:bg-yellow-400 text-black font-bold text-base py-4 mt-6 transition" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
