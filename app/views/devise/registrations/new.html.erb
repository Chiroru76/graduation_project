<div class="max-w-md mx-auto py-16">
  <h2 class="text-2xl font-bold mb-10"><%= t(".sign_up") %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :name %><br>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー ネーム", class: "w-full rounded-xl bg-gray-100 p-4 text-lg placeholder-gray-400 focus:outline-none" %>
    </div>

    <div>
      <%= f.label :email %><br />
      <div class="relative">
        <span class="absolute left-4 top-1/2 -translate-y-1/2 text-yellow-600">
          <i class="fa fa-envelope"></i>
        </span>
        <%= f.email_field :email, autocomplete: "email", placeholder: "mochipet@example.com", class: "w-full rounded-xl bg-gray-100 p-4 pl-12 text-lg placeholder-gray-400 focus:outline-none" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password %>
        <div class="relative">
          <span class="absolute left-4 top-1/2 -translate-y-1/2 text-yellow-600">
            <i class="fa fa-lock"></i>
          </span>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "半角英数字", class: "w-full rounded-xl bg-gray-100 p-4 pl-12 text-lg placeholder-gray-400 focus:outline-none" %>
          <%# 目アイコンはJSで実装する場合はここにボタンを追加 %>
        </div>
    </div>

    <div>
      <%= f.label :password_confirmation %><br />
      <div class="relative">
        <%= f.password_field :password_confirmation, autocomplete: "new-password",  placeholder: "半角英数字", class: "w-full rounded-xl bg-gray-100 p-4 pl-12 text-lg placeholder-gray-400 focus:outline-none" %>
      </div>
    </div>

    <div>
      <%= f.submit t(".sign_up_button"), class: "w-full rounded-full bg-yellow-300 hover:bg-yellow-400 text-black font-bold text-xl py-4 mt-6 transition" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
