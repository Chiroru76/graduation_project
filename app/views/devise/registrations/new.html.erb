<div class="max-w-md mx-auto py-10">
  <h2 class="text-2xl font-bold mb-10"><%= t(".sign_up") %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :name %><br>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー ネーム", class: "w-full rounded-xl bg-gray-100 p-4 text-lg placeholder-gray-400 focus:outline-none" %>
    </div>

    <div>
      <%= f.label :email %><br />
      <div class="relative">
        <span class="absolute left-4 top-1/2 -translate-y-1/2 text-yellow-600">
          <i class="fa fa-envelope"></i>
        </span>
        <%= f.email_field :email, autocomplete: "email", placeholder: "mochipet@example.com", class: "w-full rounded-xl bg-gray-100 p-4 pl-12 text-lg placeholder-gray-400 focus:outline-none" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password %>
        <div class="relative">
          <span class="absolute left-4 top-1/2 -translate-y-1/2 text-yellow-600">
            <i class="fa fa-lock"></i>
          </span>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "半角英数字", class: "w-full rounded-xl bg-gray-100 p-4 pl-12 text-lg placeholder-gray-400 focus:outline-none" %>
          <%# 目アイコンはJSで実装する場合はここにボタンを追加 %>
        </div>
    </div>

    <div>
      <%= f.label :password_confirmation %><br />
      <div class="relative">
          <span class="absolute left-4 top-1/2 -translate-y-1/2 text-yellow-600">
            <i class="fa fa-lock"></i>
          </span>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",  placeholder: "パスワードを再入力", class: "w-full rounded-xl bg-gray-100 p-4 pl-12 text-lg placeholder-gray-400 focus:outline-none" %>
      </div>
    </div>

    <div>
      <%= f.submit t(".sign_up_button"), class: "w-full rounded-full bg-yellow-300 hover:bg-yellow-400 text-black font-bold text-base lg:text-md py-2 mt-6 transition" %>
    </div>
  <% end %>

  <div class="my-6 flex items-center">
    <hr class="flex-1 border-t border-gray-300" />
    <span class="mx-4 text-sm text-gray-500">または</span>
    <hr class="flex-1 border-t border-gray-300" />
  </div>

    <div class="mt-4">
      <%= button_to user_google_oauth2_omniauth_authorize_path,
            method: :post,
            class: "flex w-full items-center justify-center gap-2 rounded-full bg-white-600 px-4 py-2 text-base font-semibold text-black shadow-sm interactive-lift hover:bg-slate-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-600",
            form: { data: { turbo: false } } do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 533.5 544.3" class="h-5 w-5" aria-hidden="true">
          <path fill="#4285f4" d="M533.5 278.4c0-17.4-1.6-34.1-4.7-50.2H272.1v95.0h146.9c-6.3 34.0-25.2 62.9-53.5 82.1v68.2h86.6c50.7-46.7 81.4-115.4 81.4-195.1Z"/>
          <path fill="#34a853" d="M272.1 544.3c72.6 0 133.6-24.0 178.2-65.8l-86.6-68.2c-24.0 16.1-54.7 25.7-91.6 25.7-70.5 0-130.2-47.6-151.6-111.6H32.9v70.2c44.7 88.3 136.6 149.7 239.2 149.7Z"/>
          <path fill="#fbbc04" d="M120.5 324.4c-10.2-30.7-10.2-63.7 0-94.4V159.8H32.9c-38.7 77.4-38.7 168.0 0 245.4l87.6-70.8Z"/>
          <path fill="#ea4335" d="M272.1 107.7c38.7-.6 75.7 13.6 103.9 39.6l77.4-77.4C404.5 24.4 343.6 0 272.1 0 169.5 0 77.6 61.4 32.9 149.7l87.6 70.8C141.9 155.6 201.6 108.0 272.1 107.7Z"/>
        </svg>
        <span>Googleアカウントで登録</span>
      <% end %>
    </div>

  <div class="mt-4">
    <%= button_to user_line_omniauth_authorize_path,
      method: :post,
      data: { turbo: false },
      class: "bg-green-500 hover:bg-green-600 text-white font-kiwi py-2 px-20 rounded-3xl text-base lg:text-md flex items-center justify-center gap-2 border-none cursor-pointer w-80 lg:w-96" do %>
      <iconify-icon icon="simple-icons:line" width="24" height="24"></iconify-icon>
      <span>LINEで登録</span>
    <% end %>
  </div>


