<div class="max-w-md mx-auto py-24">
  <h2 class="text-3xl font-bold mb-10"><%= t(".sign_in") %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <div>
      <%= f.label :email %><br />
      <div class="relative">
        <span class="absolute left-4 top-1/2 -translate-y-1/2 text-yellow-600">
          <i class="fa fa-envelope"></i>
        </span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "mochipet@example.com", class: "w-full rounded-xl bg-gray-100 p-4 pl-12 text-lg placeholder-gray-400 focus:outline-none" %>
      </div>
    </div>

    <div>
      <%= f.label :password %><br />
      <div class="relative">
        <span class="absolute left-4 top-1/2 -translate-y-1/2 text-yellow-600">
          <i class="fa fa-lock"></i>
        </span>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "半角英数字", class: "w-full rounded-xl bg-gray-100 p-4 pl-12 text-lg placeholder-gray-400 focus:outline-none" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div>
      <%= f.submit t(".sign_in"), class: "w-full rounded-full bg-yellow-300 hover:bg-yellow-400 text-black font-bold text-xl py-4 mt-6 transition" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
