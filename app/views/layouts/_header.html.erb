<header class="w-full bg-gray-100 py-3 px-4 md:px-8 flex items-start md:items-center justify-between border-b border-gray-400">

  <!-- 左: ロゴ -->
  <%= link_to root_path do %>
    <%= image_tag "motipet_logo.svg", alt: "Motipet logo", class: "h-10 md:h-12 lg:h-16 w-auto" %>
  <% end %>

  <% if user_signed_in? %>
    <nav class="my-0" data-controller="menu">
      <!-- ハンバーガー（スマホ用） -->
      <button type="button"
              class="md:hidden p-2 "
              aria-controls="main-nav"
              aria-expanded="false"
              data-action="click->menu#toggle">
        <span class="sr-only">メニューを開く</span>
        <!-- アイコン -->
        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
      </button>
    
      <!-- メニュー本体 -->
      <ul id="main-nav" data-menu-target="list" class="hidden md:flex flex-row justify-items-start md:items-center gap-y-2 md:gap-y-0 md:gap-x-3">
        <li class="md:mx-4 my-1 md:my-0">
          <%= link_to dashboard_show_path, class: "flex flex-row md:flex-col items-center justify-center w-full h-full text-base font-bold text-gray-800 hover:text-yellow-700 hover:bg-yellow-50 rounded transition-colors duration-150", aria: { label: "ホーム" } do %>
        <i class="fa-regular fa-house fa-2x mb-1"></i>
        <span class="ml-2 mt-1">ホーム</span>
          <% end %>
        </li>
        <li class="md:mx-4 my-1 md:my-0">
          <%= link_to charts_path, class: "flex flex-row md:flex-col items-center justify-center w-full h-full text-base font-bold text-gray-800 hover:text-yellow-700 hover:bg-yellow-50 rounded transition-colors duration-150", aria: { label: "グラフ" } do %>
        <i class="fa-solid fa-chart-simple fa-2x mb-1"></i>
        <span class="ml-2 mt-1">グラフ</span>
          <% end %>
        </li>
        <li class="md:mx-4 my-1 md:my-0">
          <%= link_to characters_path, class: "flex flex-row md:flex-col items-center justify-center w-full h-full text-base font-bold text-gray-800 hover:text-yellow-700 hover:bg-yellow-50 rounded transition-colors duration-150", aria: { label: "図鑑" } do %>
        <i class="fa-regular fa-address-book fa-2x mb-1"></i>
        <span class="ml-2 mt-1">図鑑</span>
          <% end %>
        </li>
        <li class="md:mx-4 my-1 md:my-0">
          <%= link_to settings_path, class: "flex flex-row md:flex-col items-center justify-center w-full h-full text-base font-bold text-gray-800 hover:text-yellow-700 hover:bg-yellow-50 rounded transition-colors duration-150", aria: { label: "設定" } do %>
        <i class="fa-solid fa-gear fa-2x mb-1"></i>
        <span class="ml-2 mt-1">設定</span>
          <% end %>
        </li>
        <li class="md:mx-4 my-1 md:my-0">
          <%= link_to profile_path, class: "flex flex-row md:flex-col items-center justify-center w-full h-full text-base font-bold text-gray-800 hover:text-yellow-700 hover:bg-yellow-50 rounded transition-colors duration-150", aria: { label: "プロフィール" } do %>
        <i class="fa-regular fa-circle-user fa-2x mb-1"></i>
        <span class="ml-2 mt-1">プロフィール</span>
          <% end %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-base font-bold hover:text-red-500" %>
        </li>
      </ul>
    </nav>


  <% else %>
    <nav>
      <ul class="flex flex-row items-center space-x-3 md:space-x-6">
        <li>
          <%= link_to "ログイン", new_user_session_path, class: "text-base font-bold px-3 py-1 md:px-4 md:py-2" %>
        </li>
        <li>
          <%= link_to new_user_registration_path, class: "flex items-center bg-yellow-200 hover:bg-yellow-300 text-black font-bold text-base rounded-2xl px-3 py-1 md:px-8 md:py-4 transition" do %>
            <span class="mr-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="inline w-7 h-7" fill="currentColor" viewBox="0 0 20 20"><path d="M10 10a4 4 0 100-8 4 4 0 000 8zm-7 8a7 7 0 1114 0H3z"/></svg>
            </span>
            新規登録
          <% end %>
        </li>
      </ul>
    </nav>
  <% end %>
</header>