<% titles.each do |title| %>
  <div
    data-controller="modal"
    aria-modal="true"
    role="dialog"
    class="fixed inset-0 z-50 flex items-center justify-center bg-black/40 px-4"
  >
    <div class="bg-white rounded-2xl p-6 w-full max-w-md shadow-xl">
      <div class="flex items-start gap-4">
        <!-- トロフィー -->
        <div class="flex-shrink-0">
          <div class="w-14 h-14 rounded-lg bg-yellow-50 flex items-center justify-center text-yellow-500 text-2xl">
            <i class="fa-solid fa-trophy" aria-hidden="true"></i>
          </div>
        </div>

        <div class="flex-1 min-w-0">
          <div class="text-sm text-gray-500">称号を獲得しました</div>
          <div class="mt-1 text-lg font-semibold text-indigo-600 truncate"><%= title.name %></div>
        </div>
      </div>

      <p class="text-sm text-gray-600 mt-4">
        <%= title.description %>
      </p>

      <div class="mt-6 flex justify-end gap-3">
        <button
          type="button"
          data-action="click->modal#close"
          class="px-4 py-2 rounded-md bg-gray-100 text-gray-700 hover:bg-gray-200"
        >
          閉じる
        </button>

        <button
          type="button"
          data-action="click->modal#close"
          class="px-4 py-2 rounded-md bg-indigo-600 text-white hover:bg-indigo-700"
        >
          OK
        </button>
      </div>
    </div>
  </div>
<% end %>