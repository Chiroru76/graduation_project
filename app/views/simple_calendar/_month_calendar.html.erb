<div class="simple-calendar">
  <div class="calendar-heading flex items-center gap-4 mb-4"></div>
    <time datetime="<%= start_date.strftime('%Y-%m') %>"
      class="inline-flex items-baseline gap-3 px-3 py-2 rounded-md bg-gray-100 text-gray-900 shadow-sm ring-1 ring-gray-200">
      <span class="text-lg font-semibold tracking-tight"><%= t('date.month_names')[start_date.month] %></span>
      <span class="text-sm text-gray-600"><%= start_date.year %></span>
    </time>

    <nav class="ml-auto">
      <div class="flex items-center space-x-2">
        <%= link_to charts_path(start_date: @start_date.prev_month.beginning_of_month),
            data: { turbo_frame: "calendar" },
            class: "inline-flex items-center px-3 py-1 bg-white border border-gray-200 rounded-md text-gray-700 hover:bg-gray-100 shadow-sm",
            aria: { label: "前の月" } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>

        <%= link_to calendar.url_for_today_view,
            data: { turbo_frame: "calendar" },
            class: "inline-flex items-center px-4 py-1 bg-yellow-300 text-black rounded-md font-medium shadow-sm",
            aria: { label: "今月" } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3M3 11h18M5 21h14a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2z" />
          </svg>
          今月
        <% end %>

        <%= link_to charts_path(start_date: @start_date.next_month.beginning_of_month),
            data: { turbo_frame: "calendar" },
            class: "inline-flex items-center px-3 py-1 bg-white border border-gray-200 rounded-md text-gray-700 hover:bg-gray-100 shadow-sm",
            aria: { label: "次の月" } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>
      </div>
    </nav>
  </div>

  <div class="overflow-x-auto bg-white rounded-lg shadow-sm">
    <table class="w-full table-fixed border-collapse text-sm">
      <thead>
        <tr class="bg-gray-50">
          <% date_range.slice(0, 7).each do |day| %>
            <th class="py-2 text-center text-xs font-semibold text-gray-600"><%= t('date.abbr_day_names')[day.wday] %></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% date_range.each_slice(7) do |week| %>
          <tr>
            <% week.each do |day| %>
              <% classes = [] %>
              <% events_for_day = calendar.sorted_events_for(day) %>
              <% classes << calendar.td_classes_for(day) if calendar.td_classes_for(day).present? %>
              <% classes << "border border-gray-200 align-top w-20 p-0" %>

              <% if day.month != start_date.month %>
                <% classes << "bg-gray-50 text-gray-400" %>
              <% elsif day == Date.current %>
                <% classes << "bg-blue-50 text-blue-700" %>
              <% elsif events_for_day.any? %>
                <% classes << "bg-green-50" %>
              <% end %>

              <%= content_tag :td, class: classes.join(' ') do %>
                <div class="p-2 md:p-3 hover:bg-gray-100 transition-colors duration-150">
                  <div class="flex items-center justify-between">
                    <span class="text-sm font-medium"><%= day.day %></span>
                    <span class="w-6 h-6 flex items-center justify-center">
                      <% if events_for_day.any? %>
                        <span class="text-green-500 text-lg leading-none">✔︎</span>
                      <% else %>
                        <span class="invisible text-lg leading-none">✔︎</span>
                      <% end %>
                    </span>
                  </div>
                </div>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
