<!-- app/views/tasks/_form.html.erb -->
<%= form_with model: task, local: true do |f| %>

  <!-- タイトル（モデル連動） -->
  <div class="form__group">
    <%= f.label :title, "タイトル", class: "form__label" %>
    <%= f.text_field :title, class: "form__input", placeholder: "毎日 5時半に起きる" %>
  </div>

  <!-- レベル（難易度：モデル連動） -->
  <div class="form__group">
    <%= f.label :difficulty, "レベル", class: "form__label" %>
    <%= f.select :difficulty,
      [[ '1（やさしい）', 0 ],
       [ '2（ふつう）',   1 ],
       [ '3（難しい）',   2 ]],
      { include_blank: false },
      class: "form__select" %>
  </div>

  <!-- タグ（未実装のダミー。将来はタグ機能に接続） -->
  <div class="form__group">
    <%= f.label :tag, "タグ", class: "form__label" %>
    <div class="form__row">
      <%= f.text_field :tag, class: "form__input", placeholder: "タグを追加" %>
    </div>
  </div>

  <!-- 繰り返し（後で repeat_rule(JSON) に接続） -->
  <div class="form__group">
    <%= f.label :due_on, "期限", class: "form__label" %>
    <%= f.date_field :due_on, class: "form__input" %>
  </div>


  <div class="form__actions">
    <%= f.submit "保存", class: "btn btn--primary" %>
    <!-- new 画面では削除は通常表示しない。編集で表示予定 -->
    <button type="button" class="btn btn--danger" disabled>削除</button>
  </div>
<% end %>