<!-- app/views/tasks/_form.html.erb -->
<%= form_with model: task, local: true, class: "max-w-2xl mx-auto" do |f| %>
  <%= f.hidden_field :kind %>

  <div class="form-card">

    <!-- Title Section -->
    <div class="space-y-2">
      <%= f.label :title, class: "form-label-tight" do %>
        <svg class="w-4 h-4 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
        </svg>
        タスクの内容
        <span class="text-emerald-500 text-xs font-normal">必須</span>
      <% end %>
      <%= f.text_field :title,
        required: true,
        class: "form-control form-control-md form-control-placeholder form-focus-emerald
                #{f.object.errors[:title].present? ? 'form-error' : ''}",
        placeholder: "例：5時半に起きる" %>
      <% if f.object.errors[:title].present? %>
        <div class="flex items-start gap-2 mt-2 text-sm text-rose-600">
          <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"/>
          </svg>
          <span><%= f.object.errors[:title].first %></span>
        </div>
      <% end %>
    </div>

    <!-- Difficulty & Tag Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

      <!-- Difficulty Level -->
      <div class="space-y-2">
        <%= f.label :difficulty, class: "form-label" do %>
          <svg class="w-4 h-4 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          難易度
          <span class="text-emerald-500 text-xs font-normal">必須</span>
        <% end %>
        <%= f.select :difficulty,
          [['1（やさしい）', 'easy'], ['2（ふつう）', 'normal'], ['3（難しい）', 'hard']],
          { prompt: '選択してください' },
          required: true,
          class: "form-control form-control-lg form-focus-amber
                  #{f.object.errors[:difficulty].present? ? 'form-error' : ''}" %>
        <% if f.object.errors[:difficulty].present? %>
          <div class="flex items-start gap-2 mt-2 text-sm text-rose-600">
            <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"/>
            </svg>
            <span><%= f.object.errors[:difficulty].first %></span>
          </div>
        <% end %>
      </div>

      <!-- Tag -->
      <div class="space-y-2">
        <%= f.label :tag, class: "form-label" do %>
          <svg class="w-4 h-4 text-violet-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
          </svg>
          タグ
          <span class="text-gray-400 text-xs font-normal">任意</span>
        <% end %>
        <%= f.text_field :tag,
          class: "form-control form-control-lg form-control-placeholder form-focus-violet",
          placeholder: "例：朝活、健康" %>
      </div>
    </div>

    <!-- Due Date (TODO only) -->
    <% if task.todo? %>
      <div class="space-y-2">
        <%= f.label :due_on, class: "form-label" do %>
          <svg class="w-4 h-4 text-sky-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          期限
          <span class="text-gray-400 text-xs font-normal">任意</span>
        <% end %>
        <%= f.date_field :due_on,
          class: "form-control form-control-lg form-focus-sky
                  #{f.object.errors[:due_on].present? ? 'form-error' : ''}" %>
        <% if f.object.errors[:due_on].present? %>
          <div class="flex items-start gap-2 mt-2 text-sm text-rose-600">
            <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"/>
            </svg>
            <span><%= f.object.errors[:due_on].first %></span>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Habit Section -->
    <% if task.habit? %>
      <div class="pt-6 border-t-2 border-gray-100 space-y-6">

        <!-- Repeat Rule -->
        <div class="space-y-4" data-controller="repeat-rule">
          <%= f.label :repeat_rule, class: "form-label" do %>
            <svg class="w-4 h-4 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            繰り返し設定
          <% end %>

          <div class="flex flex-wrap gap-1">
            <% %w[月 火 水 木 金 土 日].each_with_index do |day, index| %>
              <label class="group relative cursor-pointer">
                <%= check_box_tag "task[repeat_rule][days][]", day,
                  Array(task.repeat_rule&.dig("days")).include?(day),
                  class: "peer sr-only",
                  id: "day_#{index}" %>
                <div class="px-4 py-2 rounded-xl border-2 border-gray-200/60 bg-white
                            text-sm font-semibold text-gray-600
                            transition-all duration-300 ease-out
                            peer-checked:bg-gradient-to-br peer-checked:from-emerald-400 peer-checked:to-emerald-500
                            peer-checked:border-emerald-500 peer-checked:text-white peer-checked:shadow-lg peer-checked:shadow-emerald-500/25
                            peer-checked:scale-105
                            hover:border-gray-300/80 hover:shadow-sm
                            peer-focus:ring-4 peer-focus:ring-emerald-100/50">
                  <%= day %>
                </div>
              </label>
            <% end %>
          </div>

          <p class="text-sm text-gray-500 font-medium mt-3" data-repeat-rule-target="output">未選択</p>
        </div>

        <!-- Goal & Tracking Mode Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

          <!-- Goal -->
          <div class="space-y-2">
            <%= f.label :target_value, class: "form-label" do %>
              <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
              目標設定
            <% end %>
            <div class="p-4 rounded-xl bg-gray-50/80 border border-gray-200/60">
              <%= render "tasks/goal_modal", f: f, task: task %>
            </div>
          </div>

          <!-- Tracking Mode -->
          <div class="space-y-3">
            <%= f.label :tracking_mode, class: "form-label" do %>
              <svg class="w-4 h-4 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
              </svg>
              記録方法
              <span class="text-emerald-500 text-xs font-normal">必須</span>
            <% end %>

            <div class="space-y-2">
              <% [
                { value: :checkbox, label: 'チェックボックス', checked: task.checkbox? || task.tracking_mode.nil? },
                { value: :log, label: '数値入力', checked: task.log? }
              ].each do |option| %>
                <label class="group relative cursor-pointer block">
                  <%= f.radio_button :tracking_mode, option[:value], checked: option[:checked], class: "peer sr-only" %>
                  <div class="px-5 py-4 rounded-xl border-2 border-gray-200/60 bg-white
                              text-sm font-semibold text-gray-700 text-center
                              peer-checked:bg-gradient-to-br peer-checked:from-emerald-50 peer-checked:to-emerald-100/50
                              peer-checked:border-emerald-400 peer-checked:shadow-md peer-checked:shadow-emerald-500/10
                              peer-checked:text-emerald-700
                              hover:border-gray-300/80 hover:shadow-sm
                              peer-focus:ring-4 peer-focus:ring-emerald-100/50">
                    <%= option[:label] %>
                  </div>
                </label>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Action Buttons -->
    <div class="flex flex-wrap items-center gap-2 pt-6">
      <%= f.submit "保存する",
        class: "group relative px-8 py-4 rounded-2xl font-bold text-white text-base
                bg-gradient-to-br from-emerald-400 via-emerald-500 to-emerald-600
                shadow-lg shadow-emerald-500/30
                transition-all duration-300 ease-out
                hover:shadow-xl hover:shadow-emerald-500/40 hover:scale-105
                active:scale-95
                focus:outline-none focus:ring-4 focus:ring-emerald-200
                overflow-hidden" %>

      <% if task.persisted? %>
        <%= link_to "削除", task_path(task),
          data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
          class: "px-6 py-4 rounded-2xl font-semibold text-rose-700 text-base
                  bg-rose-50 border-2 border-rose-200/60
                  transition-all duration-300 ease-out
                  hover:bg-rose-100 hover:border-rose-300 hover:shadow-md hover:shadow-rose-500/10
                  active:scale-95
                  focus:outline-none focus:ring-4 focus:ring-rose-100" %>
      <% end %>
    </div>
  </div>
<% end %>
