<div class="fixed inset-0 flex items-center justify-center bg-black/50 z-50">
  <div class="bg-white rounded-xl shadow-xl w-full max-w-full sm:max-w-lg p-6 mx-4 sm:mx-0 max-h-[calc(100vh-4rem)] overflow-y-auto">
    <div class="flex items-center justify-between border-b pb-3 mb-4 sticky top-0 bg-white z-10">
      <h2 class="text-xl font-bold text-gray-800">
        <% if @task.todo? %>
            TODOの作成
        <% elsif @task.habit? %>
            習慣の作成
        <% end %>
      </h2>
      <%= link_to "×", dashboard_show_path,
        class: "text-gray-400 hover:text-gray-600 text-2xl leading-none",
        "aria-label": "閉じる" %>
    </div>

    <%= render "form", task: @task %>
  </div>
</div>
