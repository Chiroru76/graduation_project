<div class="min-h-screen flex flex-col bg-white">

  <!-- ===== Hero ===== -->
  <section class="relative min-h-[70vh] w-full flex flex-col justify-center items-center px-4 py-16 overflow-hidden bg-gradient-to-br from-white via-slate-50 to-indigo-50/40">
    <!-- Background decorative elements -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-20 left-10 w-32 h-32 bg-gradient-to-br from-purple-200 to-purple-300 rounded-full blur-3xl opacity-30 animate-pulse"></div>
      <div class="absolute bottom-32 right-20 w-40 h-40 bg-gradient-to-br from-blue-200 to-blue-300 rounded-full blur-3xl opacity-30 animate-pulse" style="animation-delay: 1s;"></div>
      <div class="absolute top-1/2 right-1/4 w-24 h-24 bg-gradient-to-br from-yellow-200 to-yellow-300 rounded-full blur-3xl opacity-30 animate-pulse" style="animation-delay: 2s;"></div>
    </div>

    <!-- Pattern overlay -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 50px, rgba(99, 102, 241, 0.03) 50px, rgba(99, 102, 241, 0.03) 100px);"></div>
    </div>

    <div class="relative flex flex-col items-center justify-center max-w-5xl mx-auto">
      <!-- Logo with enhanced shadow and animation -->
      <div class="mb-10 relative group">
        <div class="absolute -inset-4 bg-gradient-to-r from-purple-200/30 via-blue-200/30 to-yellow-200/30 rounded-3xl blur-2xl opacity-30 group-hover:opacity-50 transition duration-500"></div>
        <%= image_tag "motipet_toppage.svg", alt: "toppagelogo", class: "relative block mx-auto w-72 md:w-[500px] h-auto drop-shadow-xl transform group-hover:scale-105 transition duration-500" %>
      </div>

      <!-- Enhanced catchphrase with badge -->
      <div class="relative">
        <p class="text-lg md:text-xl text-gray-600 font-medium text-center max-w-2xl leading-relaxed">
          習慣とTODOの達成が、ペットの成長につながる
        </p>
      </div>
    </div>

    <div class="relative mt-12 flex justify-center">
      <div class="flex flex-wrap items-center justify-center gap-4">
        <% if user_signed_in? %>
          <%= link_to "ホームへ", dashboard_show_path,
            class: "px-8 py-3.5 bg-amber-300 text-black font-semibold rounded-xl hover:bg-amber-500 transition-all duration-200 shadow-sm" %>
        <% else %>
          <%= link_to "ログイン", new_user_session_path,
            class: "px-8 py-3.5 bg-gray-100 text-gray-900 font-semibold rounded-xl border-2 border-gray-400 hover:bg-gray-50 transition-all duration-200" %>
          <%= link_to new_user_registration_path,
            class: "flex items-center gap-2 px-8 py-3.5 bg-amber-300 text-black font-semibold rounded-xl hover:bg-amber-500 transition-all duration-200 shadow-sm" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            新規登録
          <% end %>
        <% end %>
      </div>
    </div>
  </section>

      <!-- MotiPetとは -->
  <section id="about" class="relative py-20 md:py-28 bg-gradient-to-br from-white via-amber-50/30 to-orange-50/40 overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-10 right-10 w-64 h-64 bg-gradient-to-br from-amber-200 to-orange-200 rounded-full blur-3xl opacity-20"></div>
      <div class="absolute bottom-10 left-10 w-72 h-72 bg-gradient-to-br from-yellow-200 to-amber-200 rounded-full blur-3xl opacity-20"></div>
    </div>

    <!-- Pattern overlay -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle, rgba(251, 191, 36, 0.1) 1px, transparent 1px); background-size: 20px 20px;"></div>
    </div>

    <div class="container relative mx-auto px-4 md:px-8">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-black text-gray-900 mb-6 tracking-tight">
          MotiPetとは
        </h2>
      </div>

      <!-- Content Card -->
      <div class="max-w-4xl mx-auto">
        <div class="relative group">
          <div class="absolute -inset-1 bg-gradient-to-br from-amber-200/40 to-orange-200/40 rounded-3xl blur-lg opacity-30 group-hover:opacity-40 transition duration-500"></div>
          <div class="relative bg-white/90 backdrop-blur-sm rounded-3xl border border-amber-100/80 shadow-xl p-8 md:p-12">
            <!-- Main description with icon -->
            <div class="flex flex-col md:flex-row gap-6 items-start mb-8">
              <div class="flex-shrink-0">
                <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-amber-50 to-orange-100/50 border border-amber-200/60 flex items-center justify-center shadow-md">
                  <svg class="w-8 h-8 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                </div>
              </div>
              <div class="flex-1">
                <p class="text-gray-700 text-lg leading-relaxed font-medium mb-4">
                  <span class="font-black ">MotiPet（モチペット）</span>という名前は、<span class="font-bold text-gray-900">Motivation</span> と <span class="font-bold text-gray-900">Pet</span>に由来します。
                </p>
                <p class="text-gray-600 text-base leading-relaxed">
                  日々の習慣やTODOの達成が、ペットの成長に直結するため、育成ゲーム感覚でタスクの管理を行うことができます。
                </p>
              </div>
            </div>

            <div class="mt-6">
              <h3 class="text-2xl font-bold text-gray-900 mb-6 tracking-tight text-center">できること</h3>
            </div>

            <!-- Feature highlights -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
              <div class="flex items-start gap-3 p-4 rounded-2xl bg-gradient-to-br from-green-50 to-green-100/30 border border-green-200/40">
                <div class="flex-shrink-0 mt-0.5">
                  <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-bold text-gray-900 text-sm mb-1">習慣とTODOの管理</h4>
                </div>
              </div>
              <div class="flex items-start gap-3 p-4 rounded-2xl bg-gradient-to-br from-purple-50 to-purple-100/30 border border-purple-200/40">
                <div class="flex-shrink-0 mt-0.5">
                  <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-bold text-gray-900 text-sm mb-1">ペットの育成</h4>
                </div>
              </div>
              <div class="flex items-start gap-3 p-4 rounded-2xl bg-gradient-to-br from-blue-50 to-blue-100/30 border border-blue-200/40">
                <div class="flex-shrink-0 mt-0.5">
                  <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-bold text-gray-900 text-sm mb-1">実績の可視化</h4>
                </div>
              </div>
            </div>

            <!-- Call to action message -->
            <div class="text-center pt-6 border-t border-amber-100">
              <p class="text-gray-700 font-bold text-lg flex items-center justify-center gap-2">
                <svg class="w-5 h-5 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
                </svg>
                あなたの手でペットを立派に育ててあげてください！
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ===== 使い方 ===== -->
  <section id="howto" class="relative py-20 md:py-28 bg-gradient-to-br from-slate-50 via-white to-blue-50/30 overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 opacity-30">
      <div class="absolute inset-0" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 40px, rgba(99, 102, 241, 0.02) 40px, rgba(99, 102, 241, 0.02) 80px);"></div>
    </div>

    <div class="container relative mx-auto px-4 md:px-8">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-gradient-to-br from-blue-100 to-blue-200 mb-5 shadow-lg shadow-blue-200/50">
          <svg class="w-8 h-8 text-blue-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
          </svg>
        </div>
        <h2 class="text-3xl md:text-4xl font-black text-gray-900 mb-4 tracking-tight">
          使い方
        </h2>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto font-medium">
          6つのステップで簡単に始められます
        </p>
      </div>

      <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
        <!-- STEP 1 -->
        <div class="group/step relative">
          <div class="absolute -inset-0.5 bg-gradient-to-br from-purple-200/50 to-purple-300/50 rounded-3xl blur opacity-0 group-hover/step:opacity-15 transition duration-500"></div>
          <div class="relative bg-white rounded-3xl p-8 border border-purple-100/80 shadow-md hover:shadow-xl transition-all duration-300">
            <div class="flex items-start gap-6">
              <div class="flex-shrink-0 w-20 h-20 rounded-2xl bg-gradient-to-br from-purple-50 to-purple-100/50 border border-purple-100/60 flex items-center justify-center shadow-sm">
                <%= image_tag "characters/egg/egg_egg_idle.png", alt: "ペット", class: "w-16 h-16 object-contain" %>
              </div>
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-3">
                  <span class="flex items-center justify-center w-8 h-8 rounded-xl bg-gradient-to-br from-purple-300 to-purple-500 text-white text-sm font-black shadow-lg shadow-purple-500/30">1</span>
                  <h3 class="text-lg font-black text-gray-900 tracking-tight">たまごを手に入れる</h3>
                </div>
                <p class="text-gray-600 text-sm leading-relaxed">
                  新規登録後"たまご"を入手することができます。<br>何が生まれてくるかはお楽しみ！
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- STEP 2 -->
        <div class="group/step relative">
          <div class="absolute -inset-0.5 bg-gradient-to-br from-blue-200/50 to-blue-300/50 rounded-3xl blur opacity-0 group-hover/step:opacity-15 transition duration-500"></div>
          <div class="relative bg-white rounded-3xl p-8 border border-blue-100/80 shadow-md hover:shadow-xl transition-all duration-300">
            <div class="flex items-start gap-6">
              <div class="flex-shrink-0 w-20 h-20 rounded-2xl bg-gradient-to-br from-blue-50 to-blue-100/50 border border-blue-100/60 flex items-center justify-center shadow-sm">
                <%= image_tag "top/checklist.png", alt: "習慣登録", class: "w-16 h-16 object-contain" %>
              </div>
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-3">
                  <span class="flex items-center justify-center w-8 h-8 rounded-xl bg-gradient-to-br from-blue-300 to-blue-500 text-white text-sm font-black shadow-lg shadow-blue-500/30">2</span>
                  <h3 class="text-lg font-black text-gray-900 tracking-tight">習慣・TODOを登録</h3>
                </div>
                <p class="text-gray-600 text-sm leading-relaxed">
                  続けたい習慣やTODOを登録してください。設定した難易度によって達成時に得られる経験値が異なります。
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- STEP 3 -->
        <div class="group/step relative">
          <div class="absolute -inset-0.5 bg-gradient-to-br from-green-200/50 to-green-300/50 rounded-3xl blur opacity-0 group-hover/step:opacity-15 transition duration-500"></div>
          <div class="relative bg-white rounded-3xl p-8 border border-green-100/80 shadow-md hover:shadow-xl transition-all duration-300">
            <div class="flex items-start gap-6">
              <div class="flex-shrink-0 w-20 h-20 rounded-2xl bg-gradient-to-br from-green-50 to-green-100/50 border border-green-100/60 flex items-center justify-center shadow-sm">
                <%= image_tag "top/check_mark.png", alt: "レベルアップ", class: "w-16 h-16 object-contain" %>
              </div>
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-3">
                  <span class="flex items-center justify-center w-8 h-8 rounded-xl bg-gradient-to-br from-green-300 to-green-500 text-white text-sm font-black shadow-lg shadow-green-500/30">3</span>
                  <h3 class="text-lg font-black text-gray-900 tracking-tight">習慣とTODOの実行</h3>
                </div>
                <p class="text-gray-600 text-sm leading-relaxed">
                  登録した習慣・TODOを達成したらチェックボックスに✅又は実施した回数等を入力してください。
                  <br>タスクに設定した難易度により達成時に獲得する経験値が変わります。
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- STEP 4 -->
        <div class="group/step relative">
          <div class="absolute -inset-0.5 bg-gradient-to-br from-yellow-200/50 to-yellow-300/50 rounded-3xl blur opacity-0 group-hover/step:opacity-15 transition duration-500"></div>
          <div class="relative bg-white rounded-3xl p-8 border border-yellow-100/80 shadow-md hover:shadow-xl transition-all duration-300">
            <div class="flex items-start gap-6">
              <div class="flex-shrink-0 w-20 h-20 rounded-2xl bg-gradient-to-br from-yellow-50 to-yellow-100/50 border border-yellow-100/60 flex items-center justify-center shadow-sm">
                <%= image_tag "top/egg_hatch.png", alt: "レベルアップ", class: "w-16 h-16 object-contain" %>
              </div>
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-3">
                  <span class="flex items-center justify-center w-8 h-8 rounded-xl bg-gradient-to-br from-yellow-300 to-yellow-500 text-white text-sm font-black shadow-lg shadow-yellow-500/30">4</span>
                  <h3 class="text-lg font-black text-gray-900 tracking-tight">ペットの誕生と進化</h3>
                </div>
                <p class="text-gray-600 text-sm leading-relaxed">
                  "たまご"がLv.２に達すると、ペットが誕生します。<br>
                  さらにペットが特定のレベルに達すると進化します。
                  大切に育ててあげてください！
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- STEP 5 -->
        <div class="group/step relative">
          <div class="absolute -inset-0.5 bg-gradient-to-br from-red-200/50 to-red-300/50 rounded-3xl blur opacity-0 group-hover/step:opacity-15 transition duration-500"></div>
          <div class="relative bg-white rounded-3xl p-8 border border-red-100/80 shadow-md hover:shadow-xl transition-all duration-300">
            <div class="flex items-start gap-6">
              <div class="flex-shrink-0 w-20 h-20 rounded-2xl bg-gradient-to-br from-red-50 to-red-100/50 border border-red-100/60 flex items-center justify-center shadow-sm">
                <%= image_tag "death.png", alt: "ペット", class: "w-16 h-16 object-contain" %>
              </div>
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-3">
                  <span class="flex items-center justify-center w-8 h-8 rounded-xl bg-gradient-to-br from-red-300 to-red-500 text-white text-sm font-black shadow-lg shadow-red-500/30">5</span>
                  <h3 class="text-lg font-black text-gray-900 tracking-tight">エサやりは忘れずに</h3>
                </div>
                <p class="text-gray-600 text-sm leading-relaxed">
                  「しあわせ度」が0になるとペットは死んでしまいます…定期的にエサを与えましょう
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- STEP 6 -->
        <div class="group/step relative">
          <div class="absolute -inset-0.5 bg-gradient-to-br from-emerald-200/50 to-emerald-300/50 rounded-3xl blur opacity-0 group-hover/step:opacity-15 transition duration-500"></div>
          <div class="relative bg-white rounded-3xl p-8 border border-emerald-100/80 shadow-md hover:shadow-xl transition-all duration-300">
            <div class="flex items-start gap-6">
              <div class="flex-shrink-0 w-20 h-20 rounded-2xl bg-white border border-emerald-100/60 flex items-center justify-center shadow-sm">
                <%= image_tag "top/LINE_APP.png", alt: "ペット", class: "w-16 h-16 object-contain" %>
              </div>
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-3">
                  <span class="flex items-center justify-center w-8 h-8 rounded-xl bg-gradient-to-br from-emerald-300 to-emerald-500 text-white text-sm font-black shadow-lg shadow-emerald-500/30">6</span>
                  <h3 class="text-lg font-black text-gray-900 tracking-tight">LINE通知でリマインド</h3>
                </div>
                <p class="text-gray-600 text-sm leading-relaxed mb-4">
                  LINE通知を有効にすると、TODOの締切やエサやりのリマインドを受け取ることができます
                </p>
                <%= link_to line_settings_path,
                  class: "group/link inline-flex items-center gap-2 px-4 py-2.5 rounded-xl bg-white border border-emerald-200/60 text-sm font-bold text-emerald-700 hover:from-emerald-100 hover:to-emerald-200/50 hover:shadow-md transition-all duration-300" do %>
                  <%= image_tag "top/setting.png", alt: "設定アイコン", class: "w-4 h-4 object-contain" %>
                  設定する
                  <svg class="w-4 h-4 group-hover/link:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 md:py-28 bg-white">
    <div class="container mx-auto px-6 md:px-10 text-center">
      <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8">今すぐ始めよう</h3>
      <div class="flex justify-center gap-4 flex-wrap">
        <% if user_signed_in? %>
          <%= link_to "ホームへ", dashboard_show_path,
            class: "px-8 py-3.5 bg-amber-300 text-black font-semibold rounded-xl hover:bg-amber-500 transition-all duration-200 shadow-sm" %>
        <% else %>
          <%= link_to "ログイン", new_user_session_path,
            class: "px-8 py-3.5 bg-white text-gray-900 font-semibold rounded-xl border-2 border-gray-900 hover:bg-gray-50 transition-all duration-200" %>
          <%= link_to new_user_registration_path,
            class: "flex items-center gap-2 px-8 py-3.5 bg-amber-300 text-black font-semibold rounded-xl hover:bg-amber-500 transition-all duration-200 shadow-sm" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            新規登録
          <% end %>
        <% end %>
      </div>
    </div>
  </section>

</div>
