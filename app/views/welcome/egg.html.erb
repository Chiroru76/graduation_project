<!-- app/views/welcome/egg.html.erb -->
<div class="relative min-h-screen flex flex-col items-center justify-start bg-gradient-to-b from-sky-50 via-white to-amber-50 overflow-hidden text-center px-6">

  <!-- 光の演出 -->
  <div class="fixed inset-0 pointer-events-none z-0">
    <div class="absolute top-0 left-0 w-2/3 h-2/3 bg-amber-200 opacity-30 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-2/3 h-2/3 bg-sky-200 opacity-30 rounded-full blur-3xl"></div>
  </div>

  <!-- カードコンテナ -->
  <div class="relative z-10 mt-10 mb-10 backdrop-blur-xl bg-white/40 border border-white/30 rounded-3xl shadow-2xl p-10 max-w-md w-full">
    <h1 class="text-2xl font-extrabold text-gray-800 mb-3 tracking-wide">
      たまごを手に入れました！
    </h1>
    <p class="text-gray-600 mb-10 text-lg">
      新しい命の誕生です。<br>さあ、育成を始めましょう。
    </p>

    <div class="mb-10 flex justify-center">
      <%= image_tag @appearance.asset_path,
                    alt: "たまご",
                    width: 240, height: 240,
                    class: "drop-shadow-2xl animate-float select-none" %>
    </div>

    <%= button_to "育成を始める",
                  dashboard_show_path,
                  method: :get,
                  class: "inline-block w-full rounded-2xl bg-gradient-to-r from-amber-400 to-amber-500 hover:from-amber-500 hover:to-amber-600 text-white font-semibold text-lg py-3 shadow-lg transition transform hover:-translate-y-1 hover:shadow-2xl" %>
  </div>
</div>